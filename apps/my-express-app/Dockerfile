#
# Build the docker image with `npx nx docker-build my-express-app`.
# Tip: Modify "docker-build" options in project.json to change docker build args.
#
# Run the container with `docker run -p 3000:3000 -t my-express-app`.
FROM docker.io/node:lts-alpine

ENV HOST=0.0.0.0
ENV PORT=3000

WORKDIR /app

RUN addgroup --system my-express-app && \
          adduser --system -G my-express-app my-express-app

COPY dist/apps/my-express-app my-express-app
COPY package.json my-express-app/package.json
RUN chown -R my-express-app:my-express-app .

# You can remove this install step if you build with `--bundle` option.
# The bundled output will include external dependencies.
RUN npm --prefix my-express-app --omit=dev -f install

WORKDIR /app/my-express-app

CMD [ "node", "main.js" ]
